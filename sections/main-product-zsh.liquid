                <script>
                  document.addEventListener('DOMContentLoaded', function() {
                    const productVariants = {{ product.variants | json }};
                    const sectionId = '{{ section.id }}';
                    const productFormId = '{{ product_form_id }}';

                    function updatePrice(variant) {
                        const sectionsUrl = `${window.location.pathname}?variant=${variant.id}&section_id=${sectionId}`;
                        
                        fetch(sectionsUrl)
                            .then(response => response.text())
                            .then(responseText => {
                                const html = new DOMParser().parseFromString(responseText, 'text/html');
                                const priceSource = html.getElementById(`price-${sectionId}`);
                                const priceTarget = document.getElementById(`price-${sectionId}`);
                                if (priceSource && priceTarget) {
                                    priceTarget.innerHTML = priceSource.innerHTML;
                                }

                                const inventorySource = html.getElementById(`Inventory-${sectionId}`);
                                const inventoryTarget = document.getElementById(`Inventory-${sectionId}`);
                                if (inventorySource && inventoryTarget) {
                                    inventoryTarget.innerHTML = inventorySource.innerHTML;
                                }
                                
                                // Update hidden input in main form if exists
                                const mainFormInput = document.querySelector(`form[id="${productFormId}"] input[name="id"]`);
                                if (mainFormInput) {
                                    mainFormInput.value = variant.id;
                                    mainFormInput.dispatchEvent(new Event('change', { bubbles: true }));
                                }
                            });
                    }

                    // Existing selectPackage function updates the radio.
                    // We need to listen to the radio change.
                    const radios = document.querySelectorAll('.package-option__input');
                    radios.forEach(radio => {
                        radio.addEventListener('change', function() {
                            const variantId = this.value;
                            const variant = productVariants.find(v => v.id == variantId);
                            
                            if (variant) {
                                // Update URL
                                window.history.replaceState({ }, '', `${window.location.pathname}?variant=${variant.id}`);
                                
                                // Update Price & other section parts
                                updatePrice(variant);
                                
                                // Update current package text
                                const titleEl = document.getElementById('PackageSelectorCurrent');
                                if (titleEl) titleEl.textContent = variant.name || variant.title; // variant.name usually includes title + options
                            }
                        });
                    });
                  });
                  
                  function selectPackage(element) {
                    // Update visual selection
                    document.querySelectorAll('.package-option').forEach(el => el.classList.remove('package-option--selected'));
                    element.classList.add('package-option--selected');
                    
                    // Trigger input checking if not already handled by label click
                    const input = element.querySelector('input[type="radio"]');
                    if (input) {
                        if (!input.checked) {
                            input.checked = true;
                            input.dispatchEvent(new Event('change', { bubbles: true }));
                        }
                    }
                  }

                  // Media Nav Buttons Interaction
                  const mediaButtons = document.querySelectorAll('.media-nav-button');
                  mediaButtons.forEach(btn => {
                    btn.addEventListener('click', function() {
                        mediaButtons.forEach(b => b.classList.remove('media-nav-button--active'));
                        this.classList.add('media-nav-button--active');
                        // Future: Add logic effectively switching media here
                    });
                  });
                </script>
