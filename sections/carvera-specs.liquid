{% schema %}
{
  "name": "Carvera Specs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Specs"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "spec_row",
      "name": "Spec Row",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Feature"
        },
        {
          "type": "richtext",
          "id": "value",
          "label": "Value",
          "default": "<p>Description</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Carvera Specs"
    }
  ]
}
{% endschema %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .carvera-specs__table {
    width: 100%;
    border-collapse: collapse;
    max-width: 1200px;
    margin: 0 auto;
  }

  .carvera-specs__row {
    border-bottom: 1px solid rgba(var(--color-foreground), 0.08);
  }

  .carvera-specs__label {
    padding: 1.5rem 1rem;
    width: 40%;
    font-weight: 600;
    vertical-align: top;
    color: rgb(var(--color-foreground));
  }

  .carvera-specs__value {
    padding: 1.5rem 1rem;
    width: 60%;
    color: rgba(var(--color-foreground), 0.75);
  }

  .carvera-specs__value p {
    margin: 0;
  }

  .carvera-specs__heading {
    text-align: center;
    margin-bottom: 2rem;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="h1 carvera-specs__heading">{{ section.settings.heading | escape }}</h2>
    {%- endif -%}

    <div class="carvera-specs__content">
      <table class="carvera-specs__table">
        <tbody>
          {%- for block in section.blocks -%}
            <tr class="carvera-specs__row" {{ block.shopify_attributes }}>
              <td class="carvera-specs__label">{{ block.settings.label | escape }}</td>
              <td class="carvera-specs__value">{{ block.settings.value }}</td>
            </tr>
          {%- endfor -%}
        </tbody>
      </table>
    </div>
  </div>
</div>
