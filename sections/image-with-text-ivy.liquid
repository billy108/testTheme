<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%}
    {%- if section.settings.image != blank and section.settings.image_height == 'adapt' %}
      --ratio-percent: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
    {% endif -%}
  }

  {%- assign image_mobile = section.settings.image_mobile | default: section.settings.image -%}
  {%- if image_mobile != blank and section.settings.image_height_mobile == 'adapt' %}
    @media screen and (max-width: 767px) {
      #shopify-section-{{ section.id }} {
        --ratio-percent: {{ 1 | divided_by: image_mobile.aspect_ratio | times: 100 }}%;
      }
    }
  {% endif -%}
  
  /* Download Button Styles */
  .image-with-text__item .rich-text {
    /* Main container for all blocks */
  }
  
  /* Style for the software title - left aligned */
  .software-title {
    margin-bottom: 16px;
    text-align: left;
  }
  
  /* Style for the software description - left aligned */
  .software-description {
    margin-bottom: 16px;
    text-align: left;
  }
  
  /* Style for the software prompt */
  .software-prompt {
    margin-bottom: 32px;
  }
  
  /* Main container for download buttons - matches original buttons-zsh.liquid */
  .image-with-text__item .rich-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
  }
  
  /* Container for download buttons */
  .image-with-text__item .rich-text {
    /* The rich-text container will hold all blocks including buttons */
  }
  
  /* Download buttons wrapper that matches original software-download1 class */
  .download-buttons-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 15px;
    align-items: center;
    justify-content: center;
    max-width: 650px;
    margin: 0 auto;
  }
  
  /* Style for individual download button wrapper */
  .download-button-wrapper {
    flex: 0 0 auto;
    width: 300px;
    margin: 0 7.5px;
  }
  
  /* Style for download buttons - fixed width 300px */
  .download-button {
    display: block;
    width: 300px;
    padding: 12px;
    color: white;
    background-color: black;
    text-align: center;
    border-radius: 5px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .download-button:hover {
    background-color: #333;
  }
  
  /* Size variations */
  .download-button.button--sm {
    padding: 8px 16px;
    font-size: 0.875rem;
  }
  
  .download-button.button--md {
    padding: 12px 24px;
    font-size: 1rem;
  }
  
  .download-button.button--lg {
    padding: 16px 32px;
    font-size: 1.125rem;
  }
  
  /* Style variations */
  .download-button.button--primary {
    background-color: black;
    color: white;
  }
  
  .download-button.button--secondary {
    background-color: transparent;
    color: black;
    border: 2px solid black;
  }
  
  .download-button.button--secondary:hover {
    background-color: black;
    color: white;
  }
  
  .download-button.button--link {
    background-color: transparent;
    color: black;
    text-decoration: underline;
    border: none;
  }
  
  .download-button.button--link:hover {
    text-decoration: none;
    background-color: transparent;
  }
  
  /* Style for software links */
  .software-link {
    margin-top: 20px;
    text-align: center;
  }
  
  .software-link__anchor {
    color: black;
    text-decoration: underline;
  }
  
  .software-link__anchor:hover {
    text-decoration: none;
  }
  
  /* Link style variations */
  .software-link__anchor.link-style--underline {
    text-decoration: underline;
  }
  
  .software-link__anchor.link-style--link {
    color: blue;
    text-decoration: none;
  }
  
  .software-link__anchor.link-style--button {
    display: inline-block;
    padding: 8px 16px;
    background-color: black;
    color: white;
    text-decoration: none;
    border-radius: 5px;
  }
  
  /* Desktop layout - 2 buttons per row, last button left aligned when odd */
  @media screen and (min-width: 768px) {
    /* Create a container for download buttons */
    .download-buttons-container {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: 15px;
      align-items: center;
      justify-content: flex-start;
      max-width: 650px;
      margin: 0 auto;
    }
    
    .download-button-wrapper {
      flex: 0 0 auto;
      width: 300px;
      margin: 0;
    }
    
    .download-button {
      width: 300px;
    }
  }
  
  /* Mobile layout - vertical alignment */
  @media screen and (max-width: 767px) {
    .download-buttons-container {
      display: flex;
      flex-direction: column;
      gap: 15px;
      align-items: center;
      justify-content: center;
      width: 100%;
      max-width: 100%;
    }
    
    .download-button-wrapper {
      flex: 0 0 auto;
      width: 100%;
      max-width: 300px;
      margin: 0;
    }
    
    .download-button {
      width: 100%;
    }
  }
  
  /* Tablet layout - vertical alignment */
  @media only screen and (min-device-width: 768px) and (max-device-width: 1024px) {
    .download-buttons-container {
      display: flex;
      flex-direction: column;
      gap: 15px;
      align-items: center;
      justify-content: center;
      width: 100%;
      max-width: 100%;
    }
    
    .download-button-wrapper {
      flex: 0 0 auto;
      width: 100%;
      max-width: 300px;
      margin: 0;
    }
    
    .download-button {
      width: 100%;
    }
  }
</style>

<div class="section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
  <div class="page-width{% if section.settings.full_width %} page-width--full{% endif %} relative">
    {%- liquid
      assign with_background = false
      if section.settings.gradient_background_2 != blank and section.settings.gradient_background_2 != 'rgba(0,0,0,0)'
        assign with_background = true
      endif
      if section.settings.color_background_2 != blank and section.settings.color_background_2 != 'rgba(0,0,0,0)'
        assign with_background = true
      endif
    -%}
    <div class="image-with-text{% if with_background %} with-background{% endif %} lg:flex lg:gap-8{% if section.settings.layout == 'image_first' %} lg:flex-row{% else %} lg:flex-row-reverse{% endif %} overflow-hidden">
      <div class="image-with-text__item grow shrink-0{% if section.settings.image_width == 'small' %} lg:grow-0{% endif %} relative">
        <div class="image-with-text__media h-full">
          <media-element
            class="image-with-text__image block media--{{ section.settings.image_height }} mobile:media--{{ section.settings.image_height_mobile }} relative overflow-hidden"
            {%- if section.settings.enable_parallax %}
              data-parallax="0.3" data-parallax-dir="{{ section.settings.parallax_direction }}"
            {% endif -%}
          >
            <picture class="media media--height block w-full h-full relative overflow-hidden">
              {%- if section.settings.image != blank -%}
                {%- assign sizes = '(max-width: 767px) 100vw, 50vw' -%}
                {%- if section.settings.image_mobile -%}
                  <source
                    media="(max-width: 767px)"
                    srcset="{{ section.settings.image_mobile | image_url: width: '400x' }} 400w, {{ section.settings.image_mobile | image_url: width: '600x' }} 600w, {{ section.settings.image_mobile | image_url: width: '800x' }} 800w, {{ section.settings.image_mobile | image_url: width: '1000x' }} 1000w"
                    width="{{ section.settings.image_mobile.width }}"
                    height="{{ section.settings.image_mobile.height }}"
                  >
                {%- endif -%}

                {{-
                  section.settings.image
                  | image_url: width: section.settings.image.width
                  | image_tag:
                    loading: 'lazy',
                    sizes: sizes,
                    widths: '300,400,500,600,700,800,900,1000,1200,1400,1600',
                    is: 'lazy-image'
                -}}
              {%- else -%}
                {{- 'lifestyle-1' | placeholder_svg_tag: 'placeholder' -}}
              {%- endif -%}
            </picture>
          </media-element>
        </div>
      </div>

      <div class="image-with-text__item grow shrink-0{% if section.settings.image_width == 'large' %} lg:grow-0{% endif %} {{ section.settings.content_position }}">
        <div class="rich-text lg:text-{{ section.settings.text_alignment }} text-{{ section.settings.text_alignment_mobile }} relative z-1">
          {%- liquid
            assign with_gradient = false
            if section.settings.gradient_highlight != blank and section.settings.gradient_highlight != 'rgba(0,0,0,0)'
              assign with_gradient = true
            endif

            assign delay = 0
            assign in_download_buttons = false
          -%}
          {%- for block in section.blocks -%}
            {%- if block.type != 'download_button' and in_download_buttons == true -%}
              </div>
              {%- assign in_download_buttons = false -%}
            {%- endif -%}
            {%- case block.type -%}
              {%- when '@app' -%}
                {%- render block -%}

              {%- when 'spacing' -%}
                <empty-element
                  class="block spacing-section{% if block.settings.height_mobile == 0 %} hidden lg:block{% endif %}{% if block.settings.height == 0 %} lg:hidden{% endif %}"
                  style="--spacing-height-desktop: {{ block.settings.height }}px; --spacing-height-mobile: {{ block.settings.height_mobile }}px;"
                  {{ block.shopify_attributes }}
                ></empty-element>

              {%- when 'subheading' -%}
                {%- if block.settings.subheading != blank -%}
                  <p
                    class="banner__subheading heading uppercase leading-none tracking-widest {{ block.settings.subheading_size }}{% if block.settings.secondary_color %} banner__text--colored{% endif %}"
                    {{ block.shopify_attributes }}
                  >
                    {{- block.settings.subheading -}}
                  </p>
                {%- endif -%}

              {%- when 'heading' -%}
                {%- if block.settings.heading != blank -%}
                  {%- assign delay = delay | plus: 1 -%}
                  <{{ block.settings.heading_tag }}
                    class="heading leading-none {{ block.settings.heading_size }}"
                    {{ block.shopify_attributes }}
                  >
                    {%- if block.settings.highlighted_text == 'none' -%}
                      <split-words
                        class="split-words block"
                        data-animate="fade-up-large"
                        data-animate-delay="{{ delay | times: 250 }}"
                      >
                        {{- block.settings.heading -}}
                      </split-words>
                    {%- else -%}
                      {%- render 'highlighted-text',
                        content: block.settings.heading,
                        style: block.settings.highlighted_text,
                        scribble: block.settings.highlighted_scribble,
                        gradient: with_gradient
                      -%}
                    {%- endif -%}
                  </{{ block.settings.heading_tag }}>
                {%- endif -%}

              {%- when 'text' -%}
                {%- if block.settings.text != blank -%}
                  <div
                    class="rte leading-normal {{ block.settings.text_font }} {{ block.settings.text_size }}{% if block.settings.secondary_color %} text-opacity{% endif %}"
                    {% if block.settings.text_size == 'subtext-custom' %}
                      style="--subtext-size:{{ block.settings.text_max_size }}px;"
                    {% endif %}
                    {{ block.shopify_attributes }}
                  >
                    {%- render 'highlighted-text',
                      content: block.settings.text,
                      style: block.settings.highlighted_text,
                      scribble: block.settings.highlighted_scribble,
                      gradient: with_gradient
                    -%}
                  </div>
                {%- endif -%}

              {%- when 'icon' -%}
                {%- if block.settings.icon_image != blank -%}
                  <div class="leading-none" {{ block.shopify_attributes }}>
                    <figure class="media media--transparent relative inline-block">
                      {%- capture sizes -%}{{ block.settings.icon_width }}px{%- endcapture -%}
                      {%- capture widths -%}{{ block.settings.icon_width }}, {{ block.settings.icon_width | times: 2 | at_most: block.settings.icon_image.width }}{%- endcapture -%}
                      {{-
                        block.settings.icon_image
                        | image_url: width: block.settings.icon_image.width
                        | image_tag: loading: 'lazy', sizes: sizes, widths: widths, class: 'image-fit'
                      -}}
                    </figure>
                  </div>
                {%- elsif block.settings.icon != 'none' -%}
                  <p class="leading-none" {{ block.shopify_attributes }}>
                    {%- render 'icon-guarantee', icon: block.settings.icon, size: 'lg', class: 'inline-block' -%}
                  </p>
                {%- endif -%}

              {%- when 'image' -%}
                {%- if block.settings.image != blank -%}
                  <div class="leading-none" {{ block.shopify_attributes }}>
                    <figure class="media media--transparent relative inline-block">
                      {%- if block.settings.image_width == 'custom' -%}
                        {%- capture style -%}--image-max-width: {{ block.settings.image_max_width }}px; --image-max-width-mobile: {{ block.settings.image_max_width_mobile }}px{%- endcapture -%}
                        {%- capture sizes -%}(max-width: 767px) min({{ block.settings.image_max_width_mobile }}px, 100vw), min({{ block.settings.image_max_width }}px, 100vw){%- endcapture -%}
                        {%- capture widths -%}{{ block.settings.image_max_width_mobile }},{{ block.settings.image_max_width_mobile | times: 2 }},{{ block.settings.image_max_width }},{{ block.settings.image_max_width | times: 2 }}{%- endcapture -%}
                      {%- else -%}
                        {%- assign sizes = 'min(100vw, var(--page-width))' -%}
                        {%- assign widths = '50,75,100,150,200,300,400,500,750,1000,1250,1500,1750,2000,2250,2500,2750,3000,3200' -%}
                      {%- endif -%}
                      {{-
                        block.settings.image
                        | image_url: width: block.settings.image.width
                        | image_tag:
                          loading: 'lazy',
                          sizes: sizes,
                          widths: widths,
                          style: style,
                          is: 'lazy-image',
                          class: 'image-fit'
                      -}}
                    </figure>
                  </div>
                {%- endif -%}

              {%- when 'button' -%}
                {%- if block.settings.button_label != blank -%}
                  {%- render 'button',
                    label: block.settings.button_label,
                    link: block.settings.button_link,
                    size: block.settings.button_size,
                    style: block.settings.button_style,
                    external: block.settings.button_external,
                    show_icon: block.settings.button_icon,
                    shopify_attributes: block.shopify_attributes
                  -%}
                {%- endif -%}

              {%- when 'link' -%}
                {%- if block.settings.label != blank -%}
                  <a
                    class="link inline-block"
                    {% if block.settings.link != blank %}
                      href="{{ block.settings.link }}"
                      {%- if block.settings.external %} target="_blank" rel="noopener"{% endif -%}
                    {% else %}
                      role="link" aria-disabled="true"
                    {% endif %}
                    {{ block.shopify_attributes }}
                  >
                    {{- block.settings.label -}}
                  </a>
                {%- endif -%}

              {%- when 'liquid' -%}
                {%- if block.settings.liquid != blank -%}
                  <div class="rte" {{ block.shopify_attributes }}>
                    {{- block.settings.liquid -}}
                  </div>
                {%- endif -%}
              
              {%- when 'download_button' -%}
                {%- if block.settings.button_label != blank -%}
                  {%- if in_download_buttons == false -%}
                    <div class="download-buttons-container">
                    {%- assign in_download_buttons = true -%}
                  {%- endif -%}
                  <div class="download-button-wrapper" {{ block.shopify_attributes }}>
                    <a
                      class="download-button button--{{ block.settings.button_style }} button--{{ block.settings.button_size }}"
                      href="{{ block.settings.button_link }}"
                      {%- if block.settings.button_external %} target="_blank" rel="noopener noreferrer"{% endif -%}
                    >
                      {{- block.settings.button_label -}}
                    </a>
                  </div>
                {%- endif -%}
              
              {%- when 'software_title' -%}
                {%- if block.settings.title_text != blank -%}
                  <p 
                    id="MakeraController" 
                    class="software-title text-center mb-4{% if block.settings.bold_text %} font-bold{% endif %}"
                    style="font-size: {% if block.settings.title_size == 'sm' %}1rem{% elsif block.settings.title_size == 'md' %}1.25rem{% else %}1.5rem{% endif %}"
                    {{ block.shopify_attributes }}
                  >
                    {{- block.settings.title_text -}}
                  </p>
                {%- endif -%}
              
              {%- when 'software_description' -%}
                {%- if block.settings.description_text != blank -%}
                  <div class="software-description text-center mb-4" {{ block.shopify_attributes }}>
                    {{- block.settings.description_text -}}
                  </div>
                {%- endif -%}
              
              {%- when 'software_prompt' -%}
                {%- if block.settings.prompt_text != blank -%}
                  <div class="software-prompt text-center mb-8" {{ block.shopify_attributes }}>
                    {{- block.settings.prompt_text -}}
                  </div>
                {%- endif -%}
              
              {%- when 'software_link' -%}
                {%- if block.settings.link_label != blank -%}
                  <p class="software-link" {{ block.shopify_attributes }}>
                    <a
                      href="{{ block.settings.link_url }}"
                      {%- if block.settings.link_external %} target="_blank" rel="noopener noreferrer"{% endif -%}
                      class="software-link__anchor link-style--{{ block.settings.link_style }}"
                    >
                      {{- block.settings.link_label -}}
                    </a>
                  </p>
                {%- endif -%}
                
            {%- endcase -%}
          {%- endfor -%}
          {%- if in_download_buttons == true -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

