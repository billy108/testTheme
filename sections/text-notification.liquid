  // 初始化单个通知 Section
  function initTextNotificationSection(sectionEl) {
    if (!sectionEl) return;

    const cleanupFunctions = [];

    const slideContainer = sectionEl.querySelector('[data-notification-slide]');
    const slidesContainer = slideContainer
      ? slideContainer.querySelector('.text-notification__slides')
      : null;

    // ---------------------
    // 轮播初始化（按实例）
    // ---------------------
    if (slidesContainer) {
      const slides = Array.from(
        slidesContainer.querySelectorAll('.text-notification__slide')
      );

      if (slides.length > 0) {
        let currentSlide = 0;
        let autoScrollInterval = null;
        let isElementVisible = true;
        const animationSpeed =
          parseInt(slidesContainer.dataset.animationSpeed || '3', 10) * 1000;

        // 布局基础样式
        slidesContainer.style.position = 'relative';
        slidesContainer.style.height = 'auto';
        slidesContainer.style.overflow = 'hidden';
        slidesContainer.style.display = 'block';

        slides.forEach((slide, index) => {
          slide.style.position = 'absolute';
          slide.style.top = '0';
          slide.style.left = '0';
          slide.style.width = '100%';
          slide.style.height = 'auto';
          slide.style.boxSizing = 'border-box';
          if (!slide.style.display || slide.style.display === 'none') {
            slide.style.display = 'flex';
          }
          if (!slide.style.justifyContent) {
            slide.style.justifyContent = 'center';
          }
          if (!slide.style.alignItems) {
            slide.style.alignItems = 'center';
          }

          slide.style.transform = `translateY(${index === 0 ? '0' : '100%'})`;
        });

        // 计算当前 section 的最大 slide 高度
        function calculateMaxSlideHeight() {
          let maxHeight = 0;
          const tempTransforms = slides.map((slide) => slide.style.transform);
          const tempPositions = slides.map((slide) => slide.style.position);

          slides.forEach((slide) => {
            slide.style.transform = 'none';
            slide.style.position = 'static';
          });

          slides.forEach((slide) => {
            const h = slide.offsetHeight;
            if (h > maxHeight) {
              maxHeight = h;
            }
          });

          slides.forEach((slide, index) => {
            slide.style.position = tempPositions[index];
            slide.style.transform = tempTransforms[index];
          });

          return maxHeight;
        }

        const maxSlideHeight = calculateMaxSlideHeight();
        slidesContainer.style.height = maxSlideHeight + 'px';
        slides.forEach((slide) => {
          slide.style.minHeight = maxSlideHeight + 'px';
        });

        function goToSlide(index) {
          if (index === currentSlide) return;
          const oldSlide = slides[currentSlide];
          const newSlide = slides[index];

          oldSlide.style.transition = 'transform 0.5s ease-in-out';
          oldSlide.style.transform = 'translateY(-100%)';

          currentSlide = index;

          newSlide.style.transition = 'none';
          newSlide.style.transform = 'translateY(100%)';
          void newSlide.offsetWidth; // 强制重排
          newSlide.style.transition = 'transform 0.5s ease-in-out';
          newSlide.style.transform = 'translateY(0)';
        }

        function autoScroll() {
          if (slides.length <= 1) return;
          if (!document.body.contains(slidesContainer)) return;
          const next = (currentSlide + 1) % slides.length;
          goToSlide(next);
        }

        function resetAutoScroll() {
          if (slides.length <= 1) return;
          if (autoScrollInterval) {
            clearInterval(autoScrollInterval);
            autoScrollInterval = null;
          }
          if (document.body.contains(slidesContainer) && isElementVisible) {
            autoScrollInterval = setInterval(autoScroll, animationSpeed);
          }
        }

        // 初始自动滚动
        if (slides.length > 1) {
          setTimeout(() => {
            if (document.body.contains(slidesContainer)) {
              resetAutoScroll();
            }
          }, 200);
        }

        cleanupFunctions.push(() => {
          if (autoScrollInterval) {
            clearInterval(autoScrollInterval);
          }
        });

        // 箭头按钮（只在当前 section 内查找）
        const leftArrow = slideContainer
          ? slideContainer.querySelector('.text-notification__arrow--left')
          : null;
        const rightArrow = slideContainer
          ? slideContainer.querySelector('.text-notification__arrow--right')
          : null;

        if (leftArrow && rightArrow) {
          const onLeftClick = () => {
            const prev = (currentSlide - 1 + slides.length) % slides.length;
            goToSlide(prev);
            resetAutoScroll();
          };
          const onRightClick = () => {
            const next = (currentSlide + 1) % slides.length;
            goToSlide(next);
            resetAutoScroll();
          };

          leftArrow.addEventListener('click', onLeftClick);
          rightArrow.addEventListener('click', onRightClick);

          cleanupFunctions.push(() => {
            leftArrow.removeEventListener('click', onLeftClick);
            rightArrow.removeEventListener('click', onRightClick);
          });
        }

        // 触摸滑动（当前 section）
        if ('ontouchstart' in window && slides.length > 1 && slideContainer) {
          let touchStartY = null;
          let touchDeltaY = 0;
          const threshold = 30;

          const onTouchStart = (event) => {
            if (!event.touches || event.touches.length === 0) return;
            touchStartY = event.touches[0].clientY;
            touchDeltaY = 0;
          };
          const onTouchMove = (event) => {
            if (touchStartY === null || !event.touches || event.touches.length === 0) return;
            touchDeltaY = event.touches[0].clientY - touchStartY;
          };
          const onTouchEnd = () => {
            if (touchStartY === null) return;
            if (Math.abs(touchDeltaY) > threshold) {
              if (touchDeltaY > 0) {
                const prev = (currentSlide - 1 + slides.length) % slides.length;
                goToSlide(prev);
              } else {
                const next = (currentSlide + 1) % slides.length;
                goToSlide(next);
              }
              resetAutoScroll();
            }
            touchStartY = null;
            touchDeltaY = 0;
          };

          slideContainer.addEventListener('touchstart', onTouchStart, { passive: true });
          slideContainer.addEventListener('touchmove', onTouchMove, { passive: true });
          slideContainer.addEventListener('touchend', onTouchEnd, { passive: true });

          cleanupFunctions.push(() => {
            slideContainer.removeEventListener('touchstart', onTouchStart);
            slideContainer.removeEventListener('touchmove', onTouchMove);
            slideContainer.removeEventListener('touchend', onTouchEnd);
          });
        }

        // IntersectionObserver 控制当前 section 是否可见
        if ('IntersectionObserver' in window && slideContainer) {
          const visibilityObserver = new IntersectionObserver(
            (entries) => {
              entries.forEach((entry) => {
                isElementVisible = entry.isIntersecting;
                if (isElementVisible) {
                  resetAutoScroll();
                } else {
                  if (autoScrollInterval) {
                    clearInterval(autoScrollInterval);
                    autoScrollInterval = null;
                  }
                }
              });
            },
            { threshold: 0.1 }
          );

          visibilityObserver.observe(slideContainer);

          cleanupFunctions.push(() => {
            visibilityObserver.disconnect();
          });
        }

        // 宽度变化时重新计算高度（当前 section）
        const onResize = () => {
          if (!document.body.contains(slidesContainer)) return;
          const newMax = calculateMaxSlideHeight();
          slidesContainer.style.height = newMax + 'px';
          slides.forEach((slide) => {
            slide.style.minHeight = newMax + 'px';
          });
          slides.forEach((slide, index) => {
            slide.style.transform = index === currentSlide ? 'translateY(0)' : 'translateY(100%)';
          });
        };

        window.addEventListener('resize', onResize, { passive: true });
        cleanupFunctions.push(() => {
          window.removeEventListener('resize', onResize);
        });

        // 当该 section 从 DOM 中移除时，自动清理
        if (typeof MutationObserver !== 'undefined') {
          const domObserver = new MutationObserver(() => {
            if (!document.body.contains(sectionEl)) {
              cleanupAllResources();
              domObserver.disconnect();
            }
          });

          domObserver.observe(document.body, {
            childList: true,
            subtree: true,
          });

          cleanupFunctions.push(() => domObserver.disconnect());
        }

        function cleanupAllResources() {
          cleanupFunctions.forEach((fn) => {
            try {
              fn();
            } catch (e) {}
          });
          cleanupFunctions.length = 0;
        }

        // designMode 下 section 卸载时清理
        if (window.Shopify && window.Shopify.designMode) {
          const onSectionUnload = (event) => {
            if (event.detail && event.detail.sectionId === sectionEl.dataset.sectionId) {
              cleanupAllResources();
              document.removeEventListener('shopify:section:unload', onSectionUnload);
            }
          };
          document.addEventListener('shopify:section:unload', onSectionUnload);

          cleanupFunctions.push(() => {
            document.removeEventListener('shopify:section:unload', onSectionUnload);
          });
        }

        // 页面卸载时清理
        const onBeforeUnload = () => {
          cleanupAllResources();
          window.removeEventListener('beforeunload', onBeforeUnload);
        };
        window.addEventListener('beforeunload', onBeforeUnload);
        cleanupFunctions.push(() => {
          window.removeEventListener('beforeunload', onBeforeUnload);
        });
      }
    }

    // ---------------------
    // 倒计时初始化（按实例）
    // ---------------------
    function initializeExpiresCountdowns() {
      const timers = sectionEl.querySelectorAll('countdown-timer[data-expires]');
      const TEXT_NODE = typeof Node !== 'undefined' ? Node.TEXT_NODE : 3;

      timers.forEach((timer) => {
        if (timer.dataset.countdownInitialized === 'true') return;
        timer.dataset.countdownInitialized = 'true';

        const expiresAttr =
          timer.dataset.expires || timer.getAttribute('data-expires');
        let expiresAt = Date.parse(expiresAttr);

        if (Number.isNaN(expiresAt)) {
          const fallbackDate = new Date();
          fallbackDate.setDate(fallbackDate.getDate() + 7);
          expiresAt = fallbackDate.getTime();
        }

        const unitDigitsMap = {};
        timer
          .querySelectorAll('.countdown__item[data-countdown-unit]')
          .forEach((item) => {
            const unit = item.dataset.countdownUnit;
            if (!unit) return;
            const digits = Array.from(item.querySelectorAll('.number'));
            if (!digits.length) return;
            unitDigitsMap[unit] = digits;
          });

        const ensureTextNode = (element) => {
          const nodes = Array.from(element.childNodes);
          const textNode = nodes.find((child) => child.nodeType === TEXT_NODE);
          if (textNode) return textNode;
          const created = document.createTextNode('');
          element.insertBefore(created, element.firstChild);
          return created;
        };

        const updateDigits = (unit, value) => {
          const digitNodes = unitDigitsMap[unit];
          if (!digitNodes || !digitNodes.length) return;
          const padded = value
            .toString()
            .padStart(digitNodes.length, '0')
            .slice(-digitNodes.length);
          digitNodes.forEach((digitNode, index) => {
            const char = padded.charAt(index) || '0';
            ensureTextNode(digitNode).textContent = char;
          });
        };

        const dayMs = 1000 * 60 * 60 * 24;
        const hourMs = 1000 * 60 * 60;
        const minuteMs = 1000 * 60;
        let intervalId;

        const updateCountdown = () => {
          const now = Date.now();
          let distance = expiresAt - now;
          if (distance <= 0) {
            distance = 0;
          }

          const days = Math.floor(distance / dayMs);
          const hours = Math.floor((distance % dayMs) / hourMs);
          const minutes = Math.floor((distance % hourMs) / minuteMs);
          const seconds = Math.floor((distance % minuteMs) / 1000);

          updateDigits('days', days);
          updateDigits('hours', hours);
          updateDigits('minutes', minutes);
          updateDigits('seconds', seconds);

          if (distance === 0 && intervalId) {
            clearInterval(intervalId);
          }
        };

        updateCountdown();
        intervalId = setInterval(updateCountdown, 1000);

        cleanupFunctions.push(() => {
          if (intervalId) clearInterval(intervalId);
          delete timer.dataset.countdownInitialized;
        });
      });
    }

    initializeExpiresCountdowns();

    // ---------------------
    // 语言选择器定位（按实例）
    // ---------------------
    function ensureLanguageSelectorWorks() {
      const languageWrapper = sectionEl.querySelector(
        '.text-notification__language-wrapper'
      );
      if (!languageWrapper) return;

      const languageForm = languageWrapper.querySelector('.localization-form');
      if (!languageForm) return;

      const localizationForm = languageForm.closest('localization-form');
      if (!localizationForm) return;

      const button = localizationForm.querySelector(
        'button.localization-form__select'
      );
      const panel = localizationForm.querySelector('.disclosure__list-wrapper');

      if (!button || !panel) return;

      button.style.pointerEvents = 'auto';
      button.style.cursor = 'pointer';

      function updatePanelPosition() {
        if (panel.hasAttribute('hidden')) return;

        const wrapperRect = languageWrapper.getBoundingClientRect();

        panel.style.position = 'absolute';
        panel.style.top = wrapperRect.height + 'px';
        panel.style.left = '0px';
        panel.style.zIndex = '10001';
        panel.style.display = 'block';
        panel.style.visibility = 'visible';
        panel.style.opacity = '1';
        panel.style.height = 'auto';
        panel.style.minHeight = 'auto';
        panel.style.maxHeight = 'none';
        panel.style.width = 'auto';
        panel.style.overflow = 'visible';

        const list = panel.querySelector('.disclosure__list');
        if (list) {
          list.style.display = 'block';
          list.style.visibility = 'visible';
        }
      }

      if (typeof MutationObserver !== 'undefined') {
        const observer = new MutationObserver((mutations) => {
          mutations.forEach((mutation) => {
            if (
              mutation.type === 'attributes' &&
              mutation.attributeName === 'hidden'
            ) {
              if (panel.hasAttribute('hidden')) {
                panel.style.display = 'none';
                panel.style.visibility = 'hidden';
              } else {
                setTimeout(() => {
                  updatePanelPosition();
                }, 10);
              }
            }
          });
        });

        observer.observe(panel, {
          attributes: true,
          attributeFilter: ['hidden'],
        });

        cleanupFunctions.push(() => observer.disconnect());
      }

      const onButtonClick = () => {
        setTimeout(() => {
          if (!panel.hasAttribute('hidden')) {
            updatePanelPosition();
          }
        }, 50);
      };
      button.addEventListener('click', onButtonClick);
      cleanupFunctions.push(() => {
        button.removeEventListener('click', onButtonClick);
      });

      const onScrollOrResize = () => {
        if (!panel.hasAttribute('hidden')) {
          updatePanelPosition();
        }
      };
      window.addEventListener('scroll', onScrollOrResize, { passive: true });
      window.addEventListener('resize', onScrollOrResize, { passive: true });
      cleanupFunctions.push(() => {
        window.removeEventListener('scroll', onScrollOrResize);
        window.removeEventListener('resize', onScrollOrResize);
      });
    }

    // 延迟执行语言选择器定位，确保 DOM 就绪
    setTimeout(ensureLanguageSelectorWorks, 100);
    setTimeout(ensureLanguageSelectorWorks, 500);

    if (typeof MutationObserver !== 'undefined') {
      const langObserver = new MutationObserver(() => {
        ensureLanguageSelectorWorks();
      });
      langObserver.observe(sectionEl, {
        childList: true,
        subtree: true,
      });
      cleanupFunctions.push(() => langObserver.disconnect());
    }
  }

